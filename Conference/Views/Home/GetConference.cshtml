
@{
    ViewBag.Title = "Liste des conferences";
}

<h2>@ViewBag.Title </h2>

<div class="d-flex">
    @foreach (var item in ViewBag.ListCongres as List<Conference.Models.Congre>)
    {
        <div class="card m-5" style="width: 28rem;">
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/062.webp" class="card-img-top" alt="Chicago Skyscrapers" />
            <div class="card-body">
                <h5 class="card-title">@item.titre</h5>
                <p class="card-text">@item.Details</p>
            </div>
            <ul class="list-group list-group-light list-group-small">
                <li class="list-group-item px-4">Du : @item.DateDebut</li>
                <li class="list-group-item px-4">Au :@item.DateFin</li>
                <li class="list-group-item px-4">Lieu: @item.Lieu</li>
            </ul>
            <div class="card-body">
                @{@model Conference.Models.Participation
                Conference.Models.Participant user = (Conference.Models.Participant)Session["user"];

                using (Html.BeginForm("GetConference", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group " style="display:none;visibility:hidden;">
                        @Html.LabelFor(model => model.Utilisateur, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Utilisateur, new { @class = "form-control", Value = (user != null ? user.Nom : string.Empty) })
                        @Html.ValidationMessageFor(model => model.Utilisateur, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group"  style="display:none;visibility:hidden;">
                        @Html.LabelFor(model => model.ConferenceId, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.ConferenceId, new { @class = "form-control", Value = item.Id })
                        @Html.ValidationMessageFor(model => model.ConferenceId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Participer" class="btn btn-primary" />
                    </div>
                }
                }

                @if (Session["user"] != null)
                {
                    @*Conference.Models.Participant user = (Conference.Models.Participant)Session["user"];*@
                 if (user.Nom == "admin")
                {
                    using (Html.BeginForm("Supprimer", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group "  style="display:none;visibility:hidden;">
                            @Html.LabelFor(model => model.ConferenceId, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.ConferenceId, new { @class = "form-control", Value = item.Id })
                            @Html.ValidationMessageFor(model => model.ConferenceId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Supprimer" class="btn btn-primary" />
                        </div>
                    }
                  }
                }
            </div>
        </div>
    }
</div>
