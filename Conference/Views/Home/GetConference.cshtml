
@{
    ViewBag.Title = "Liste des conferences";
}

<h2>@ViewBag.Title </h2>

<div class="d-flex">
    @foreach (var item in ViewBag.ListCongres as List<Conference.Models.Congre>)
    {
        <div class="card m-5" style="width: 28rem;">
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/062.webp" class="card-img-top" alt="Chicago Skyscrapers" />
            <div class="card-body">
                <h5 class="card-title">@item.titre</h5>
                <p class="card-text">@item.Details</p>
            </div>
            <ul class="list-group list-group-light list-group-small">
                <li class="list-group-item px-4">Du : @item.DateDebut</li>
                <li class="list-group-item px-4">Au :@item.DateFin</li>
                <li class="list-group-item px-4">Lieu: @item.Lieu</li>
            </ul>
            <div class="card-body">
                @Html.ActionLink("Participer", "Participer", "Home")
                @if (Session["user"] != null)
                {
                    Conference.Models.Participant user = (Conference.Models.Participant)Session["user"];
                    if (user.Role == "admin")
                    {
                        @Html.ActionLink("Supprimer", "Supprimer", "Home")
                    }
                }
            </div>
        </div>
    }
</div>
